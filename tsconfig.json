{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
    },
    "exclude": [
        "src/**/*.test.ts"
    ]
}